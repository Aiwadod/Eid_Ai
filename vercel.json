{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/next",
      "config": {
        "buildCommand": "npm run build",
        "installCommand": "npm install"
      }
    }
  ],
  "env": {
    "FONTCONFIG_PATH": "/usr/share/fontconfig",
    "FONTCONFIG_FILE": "/usr/share/fontconfig/fonts.conf",
    "LD_LIBRARY_PATH": "/usr/lib"
  }
} 